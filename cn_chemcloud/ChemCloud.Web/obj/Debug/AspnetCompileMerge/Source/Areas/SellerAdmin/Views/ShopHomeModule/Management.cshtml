@model IEnumerable<ChemCloud.Web.Areas.SellerAdmin.Models.ShopHomeModuleBasicModel>

<script src="~/Scripts/jquery.ChemCloudDatagrid.js"></script>
<script src="~/Scripts/jquery.ChemCloudLinkage.nocreate.js"></script>
<script src="~/Scripts/jquery.productSelector.js"></script>
<script src="~/Areas/SellerAdmin/Scripts/shopHomeModule.js"></script>


<div class="container">
    <ul class="nav nav-tabs-custom clearfix">
        <strong>产品模块</strong>
        <li class="active"><a>管理</a></li>
    </ul>

    <table id="moduleTable" class="table mt20">
        <thead>
            <tr>
                <th align="center">产品模块名称</th>
                <th align="center">已选择产品数</th>
                <th class="td-operate">操作</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var shopHomeModel in Model)
            {
                <tr moduleId="@shopHomeModel.Id">
                    <td><input class="text-order" style="width:200px" type="text" value="@shopHomeModel.Name" modulename preText="@shopHomeModel.Name"></td>
                    <td count>@shopHomeModel.ProductIds.Count()</td>
                    <td class="td-operate"><span class="btn-a"><a productids="@(string.Join(",",shopHomeModel.ProductIds))">选择产品</a><a delete>删除</a></span></td>
                </tr>
            }

        </tbody>
    </table>
    <a class="add-atrr" id="addModule"><span class="glyphicon glyphicon-plus-sign"></span>新增模块</a>
</div>
