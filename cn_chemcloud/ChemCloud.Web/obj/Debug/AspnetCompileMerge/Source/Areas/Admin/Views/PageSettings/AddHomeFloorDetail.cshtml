                        </tr>
                        <tr>
                            <td>右七</td>
                            <td><div class="upload-img" id="nine" url="@Model.ProductLinks.ElementAt(8).Url"></div></td>
                            <td><input class="form-control input-xs pLink" type="text" position="9" name="url" value="@Model.ProductLinks.ElementAt(8).Name" /></td>
                        </tr>
                        <tr>
                            <td>右八</td>
                            <td><div class="upload-img" id="ten" url="@Model.ProductLinks.ElementAt(9).Url"></div></td>
                            <td><input class="form-control input-xs pLink" type="text" position="10" name="url" value="@Model.ProductLinks.ElementAt(9).Name" /></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <input type="hidden" name="id" id="homeFloorId" value="@Model.Id" />
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="button" name="submit" class="btn btn-primary">保存楼层</button>
            </div>
        </div>
    </form>
</div>
