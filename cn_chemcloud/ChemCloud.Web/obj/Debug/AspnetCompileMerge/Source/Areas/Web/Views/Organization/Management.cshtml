<script src="~/Scripts/CommonJS.js"></script>
<script src="~/Areas/Web/Scripts/Organization.js"></script>
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<link href="~/Content/artdialog.css" rel="stylesheet" />
<link href="~/Content/inner-custom.css" rel="stylesheet" />
<script src="~/Scripts/jquery.ChemCloudDatagrid.js"></script>
<style>
    body {
        background:#f2f2f2;
    }
    .box1 {
        padding: 15px 4px 20px 100px;
    }
</style>
<div class="box1 lh24">
    <div class="title bot-border">
        <h3 class="title_txt cur">组织架构</h3>

    </div>
    <div class="border-box">
        <div class="search-box only-line">
            <div class="form-group" style="height:30px; padding-top:5px; padding-left:30px;">
                @foreach (var organization in Model)
                {
                    if (@organization.ParentId == 0)
                    {
                        <input type="button" class="btn btn-danger btn-ssm" id="AddOrg" style="width:70px; height:28px;cursor:pointer;margin-left:-30px" value="新增" />
                        <input type="button" class="btn btn-danger btn-ssm" id="AddByOrg" style="width:70px; height:28px;cursor:pointer;" value="新增下级" />
                        <input type="button" class="btn btn-danger btn-ssm" id="EditOrg" style="width:70px; height:28px;cursor:pointer;" value="编辑" />
                        <input type="button" class="btn btn-danger btn-ssm" id="DeleOrg" style="width:70px; height:28px;cursor:pointer;" value="删除" />
                    }
                }
            </div>
        </div>

        @*<div id="shopToolBar">

            </div>*@
    </div>
    <table class="table category_table" id="list">
        <thead>
            <tr>
                <th class="td-choose">选择</th>
                <th>用户名</th>
                <th class="td-operate"></th>
            </tr>
        </thead>
        <tbody>
            @if (null == Model)
            {
                <tr>
                    <td style="text-align:center;" colspan="3"><h2>没有组织架构</h2></td>
                </tr>
            }
            else
            {
                foreach (var organization in Model)
                {
                    var @str = @organization.UserName + "(" + @organization.RoleName + ")";
                    <tr class="level-1 caokai">
                        <td class="td-choose"><input type="checkbox" name="" /></td>
                        <td>
                            <span class="glyphicon glyphicon-plus-sign"></span><input type="hidden" class="hidden_id" id="Id" value="@organization.Id" /><input class="text-name" type="text" value="@str" style="width:200px" disabled="disabled" />
                        </td>
                        <td class="td-operate">
                            <span class="btn-a" style="width:200px">
                                @*@if (organization.ParentId == 0)
                                    {
                                        <a href="./AddNewOrg">新增</a><a href="./AddByParent?Id=@organization.Id">新增下级</a><a href="./Edit?Id=@organization.Id">编辑</a><a class="delete-classify">删除</a>
                                    }*@
                            </span>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
