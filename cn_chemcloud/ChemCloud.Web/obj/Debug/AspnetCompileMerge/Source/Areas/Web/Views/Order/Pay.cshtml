                                                                }
                                                            }
                                                        }
                                                    });
                                                }

                                                var loading = showLoading();

                                                $.post('PayByCapital', { orderIds: $('#orderIds').val(), pwd: $('#payPwd').val(), payid: $('#payid').val() }, function (result) {
                                                    if (result.success == true) {
