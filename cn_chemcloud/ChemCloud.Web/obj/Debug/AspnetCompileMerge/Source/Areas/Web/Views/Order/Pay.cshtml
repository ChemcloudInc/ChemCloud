                    {
                        <a id="btnCharge" href="/userCenter?url=/usercapital/capitalcharge&tar=usercapital">去充值</a>
                    }
                    else if (ViewBag.UserType == 2)
                    {
                        <a id="btnCharge" href="/SellerAdmin/UserCapital/CapitalCharge">去充值</a>
                    }*@

            </label>
