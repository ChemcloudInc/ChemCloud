                                                                    if (result == "ok") {
                                                                        //成功操作后执行订单状态修改
                                                                        $.post('/common/PublicMoney/UpdateOrderStatus', { "orderId": orderid, "status": paystatus, "paymodel": "余额支付" }, function (result) {
                                                                            if (result == "ok") {
                                                                                loading.close();
                                                                                //全部操作成功完成后执行订单状态修改
                                                                                var strs = '/userCenter?url=/userorder?orderids=' + orderid + '&tar=userorder';
