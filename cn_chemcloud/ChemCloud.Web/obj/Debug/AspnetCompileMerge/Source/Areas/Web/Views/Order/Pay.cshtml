                    $.ajax({
                        type: 'post',
                        url: '/common/AliPay/SetAliPay',
                        async: false,
                        dataType: 'json',
                        data: {
                            "out_trade_no": orderIds,
                            "subject": orderIds,
                            "total_fee": totalmon,
                            "body": "付款到chemcloud",
                            "paytype": "0",
                            "type": "webzf",
                            "iplm": "2",
                            "targetid": "0",
                            "paymodel": "支付宝"
                        },
                        success: function (aliresult) {
                            console.log(aliresult);
                            $('#nextBtn').attr('href', "javascript:void(0)");
                            $('#nextBtn').attr('target', "_self");
                            $("#shownextbtn").html(aliresult);
                        }
