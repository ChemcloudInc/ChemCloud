 
@model IEnumerable<ChemCloud.Web.Models.MessageViewModel>
   @{
       Layout = null;
   }

<table class="table table-striped table-hover" >
    <thead>
        <tr>
  <th>发送时间</th>
            <th>发送人</th>
            <th>发送内容</th>
            <th>接收人</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {

            if (item.SendPrimary == 1)
            {


                <tr class="info">
 <td>@item.SendTime</td>
                    <td>@item.SendUserName</td>
                   
                    <td>@item.MessageContent</td>

                    <td>@item.ReviceUserName</td>
                </tr>

            }
            else
            {
                <tr class="danger" >
  <td>@item.SendTime</td>
                    <td>@item.SendUserName</td>
                  
                    <td>@item.MessageContent</td>

                    <td>@item.ReviceUserName</td>
                </tr>
            }

        }

    </tbody>
</table>



