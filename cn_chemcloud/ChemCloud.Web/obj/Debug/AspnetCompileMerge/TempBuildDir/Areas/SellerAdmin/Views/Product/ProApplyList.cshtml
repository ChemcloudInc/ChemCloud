<style>
    .title {
        background-color: #e6e6e6;
        border-bottom: 1px solid #e4e4e4;
        float: left;
        width: 100%;
        margin-bottom: 15px;
    }

        .title .title_txt.cur, .title .title_txt.curr {
            color: #333;
            border-bottom: 2px solid #3498DB;
            margin-bottom: -1px;
            line-height: 44px;
            display: inline-block;
            padding: 0 10px;
        }
