@model ChemCloud.Model.MessageRevice
@using ChemCloud.Core;
@{
    ViewBag.Title = "Detail";
}
<div class="container">
    <ul class="nav nav-tabs-custom clearfix">
        <strong>通知明细</strong>
        <li class="active"><a>通知明细</a></li>
        <li><a href="./Management">通知列表</a></li>
    </ul>

    <h3 class="table-hd">通知明细</h3>
    <table class="table table-bordered table-striped">
        <colgroup>
            <col class="col-xs-1">
            <col class="col-xs-7">
        </colgroup>
        <tbody>
            @*<tr>
                    <td>模板ID</td>
                    <td>@Model.Id</td>
                </tr>*@
            <tr>
                <td>类别</td>
                <td>通知</td>
            </tr>
            <tr>
                <td>通知名称</td>
                <td>@Model.MessageDetial.MessageTitle</td>
            </tr>
            <tr>
                <td>通知内容</td>
                <td>@Model.MessageDetial.MessageContent</td>
            </tr>
            <tr>
                <td>发送时间</td>
                <td>@Model.SendTime</td>
            </tr>
            <tr>
                <td>发送人</td>
                <td>@Model.MessageDetial.SendName</td>
            </tr>
            @{
                if (@Model.ReadFlag == 1)
                {
                    <tr>
                        <td>阅读时间</td>
                        <td>@Model.ReadTime</td>
                    </tr>
                }
            }

            @*<tr>
                    <td>接收人ID</td>
                    <td>@Model.MemberId</td>
                </tr>
                <tr>
                    <td>接收人</td>
                    <td>@Model.ReceiveName</td>
                </tr>
                <tr>
                    <td>接收人类别</td>
                    <td>@Model.ReceType</td>
                </tr>*@
        </tbody>
    </table>

</div>
