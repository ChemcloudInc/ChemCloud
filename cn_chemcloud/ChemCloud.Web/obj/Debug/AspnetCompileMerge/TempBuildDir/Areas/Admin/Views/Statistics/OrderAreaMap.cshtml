@{
    ViewBag.Title = "OederAreaMap";
}
<script src="~/Scripts/echarts-plain-map.js"></script>
<script src="~/Scripts/CommonJS.js"></script>
<script src="~/Scripts/Region.js"></script>
<script src="~/Areas/Admin/Scripts/OrderAreaMap.js"></script>
<div class="container">
    <ul class="nav nav-tabs-custom clearfix">
        <strong>会员统计</strong>
        <li><a href="./Member">新增会员</a></li>
        <li class="active"><a>区域分析</a></li>
        <em class="primary-btn">
            <span class="glyphicon glyphicon-question-sign"></span>
            <div class="primary">
                <h3>温馨提示：</h3>
                <span>*</span><p>可查看平台供应商产品销量、产品销售额统计数据</p>
            </div>
        </em>
    </ul>
        <form class="custom-inline count-search">
            <div class="form-group">
                @Html.DropDownList("year", (List<SelectListItem>)ViewBag.YearDrop, new { @class = "form-control input-sm" })
            </div>
            <div class="form-group">
                @Html.DropDownList("month", (List<SelectListItem>)ViewBag.MonthDrop, new { @class = "form-control input-sm" })
            </div>

            <input type="button" class="btn btn-primary btn-sm" id="SearchBtn" value="查询" />
        </form>
    <div class="count">
        <div class="text-right form-group">
            <div class="btn-group">
                @*<button type="button" value="1" name="orderType" class="btn btn-default btn-xs active">下单客户数</button>*@
                <button type="button" value="2" name="orderType" class="btn btn-default btn-xs active">下单量</button>
                <button type="button" value="3" name="orderType" class="btn btn-default btn-xs">下单金额</button>
            </div>
            
        </div>
		<div class="count-chat">
            <div id="mainMap" style="height:500px;border:1px solid #ccc;padding:10px;"></div>
        </div>
        <table class="table table-bordered table-primary">
            <tbody>
                <tr class="info">
                    <td><span id="diaplayName"></span><b id="displayValue"></b></td>
                </tr>
            </tbody>
        </table>


    </div>
</div>















<input type="hidden" value="@ViewBag.Year" id="currentYear" />
<input type="hidden" value="@ViewBag.Month" id="currentMonth" />


