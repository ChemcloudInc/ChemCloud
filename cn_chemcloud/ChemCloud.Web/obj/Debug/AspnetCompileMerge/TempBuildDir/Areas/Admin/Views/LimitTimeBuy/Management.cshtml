@{ ViewBag.Title = "LimitTimeBuyManagement";}
@model ChemCloud.Model.LimitTimeMarketInfo
<script src="~/Scripts/jquery.ChemCloudDatagrid.js"></script>
<script src="~/Areas/Admin/Scripts/LimitTimeBuy.js"></script>
<script src="~/Scripts/jquery.placeholder.min.js"></script>
<script src="~/Scripts/bootstrap.autocomplete.js"></script>
<script type="text/javascript">
    $(function () {
        
    });
</script>

<div class="container">
    <ul class="nav nav-tabs-custom clearfix">
        <strong>限时购</strong>
        <li  class="active" ><a>活动列表</a></li>
        <li  ><a href="./SetSlide">活动页面设置</a></li>
        <li ><a href="./BoughtList">服务购买列表</a></li>
        <li ><a href="./MarketCategory">活动产品分类</a></li>
        <li ><a href="./ServiceSetting">服务费用设置</a></li>
        <em class="primary-btn">
            <span class="glyphicon glyphicon-question-sign"></span>
            <div class="primary">
                <h3>温馨提示：</h3>
                <span>1、</span><p>管理整个平台的限时购活动</p>
                <span>2、</span><p>平台管理员可以设置、管理限时购的基础信息</p>
            </div>
        </em>
    </ul>

    <div class="search-box  only-line" id="search-box">
        <form class="custom-inline" role="form">

            <div class="form-group">
                <label class="label-inline" for="">审核状态</label>
                @Html.DropDownListFor(s => s.AuditStatus, ((IEnumerable<SelectListItem>)ViewBag.Status),
                    new { @class = "form-control input-ssm", id = "AuditStatus" })
            </div>
            <div class="form-group">
                <label class="label-inline" for="">供应商</label>
                <input class="form-control input-ssm" type="text" id="txtShopName">
            </div>
            <div class="form-group">
                <label class="label-inline" for="">产品名称</label>
                <input class="form-control input-ssm" type="text" id="txtProductName">
            </div>
            <div class="form-group"><button type="button" class="btn btn-primary btn-sm" id="searchButton">搜 索</button></div>
        </form>
    </div>

    <table id="list" class="table"></table>
</div>

