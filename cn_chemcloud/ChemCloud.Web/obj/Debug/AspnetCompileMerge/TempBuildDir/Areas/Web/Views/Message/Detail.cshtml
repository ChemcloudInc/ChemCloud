@{
    Layout = "~/Areas/Web/Views/Shared/_UserCenter.cshtml";
    ViewBag.Title = "Detail";
}
@using ChemCloud.Core
@model ChemCloud.Model.SiteMessages

<div class="box1 lh24">
    <div class="title bot-border" style="margin-top:20px;">
        <h3 class="title_txt cur">消息明细</h3>
    </div>
    <div class="border-box">
        <div class="container">

            <table class="table table-bordered table-striped">
                <colgroup>
                    <col class="col-xs-1">
                    <col class="col-xs-7">
                </colgroup>
                <tbody>

                    <tr>
                        <td>模板名称：</td>
                        <td>@Model.MessageModule</td>
                    </tr>
                    <tr>
                        <td>消息内容：</td>
                        <td>@Model.MessageContent</td>
                    </tr>
                    <tr>
                        <td>发送时间：</td>
                        <td>@Model.SendTime</td>
                    </tr>
                    <tr>
                        <td>消息发送人：</td>
                        <td>@Model.SendName</td>
                    </tr>
                    <tr>
                        <td>阅读状态：</td>
                        <td>@Model.ReadStatus.ToDescription();</td>
                    </tr>
                    <tr>
                        <td>阅读时间：</td>
                        <td>@Model.ReadTime</td>
                    </tr>

                    <tr>
                        <td>接收人：</td>
                        <td>@Model.ReceiveName</td>
                    </tr>
                    <tr>
                        <td>接收人类别：</td>
                        <td>@Model.ReceType.ToDescription()</td>
                    </tr>
                </tbody>
            </table>

        </div>
    </div>
</div>

