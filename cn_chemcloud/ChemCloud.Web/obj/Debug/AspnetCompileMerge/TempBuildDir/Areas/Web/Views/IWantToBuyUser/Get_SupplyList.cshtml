    .search-area .label2 { width: 70px; }
    .search-area .search_keyword { width: 390px; line-height: 26px; height: 26px;border: 1px solid #e4e4e4; display: inline-block; margin: 7px 5px 7px 5px; padding: 0 3px; font-family: 'microsoft yahei'; color: #666; border-radius: 2px;}
    .search-area .search_address { width: 390px; line-height: 26px; height: 26px; border: 1px solid #e4e4e4; display: inline-block; margin: 7px 5px 7px 5px; padding: 0 3px; font-family: 'microsoft yahei'; color: #666; border-radius: 2px;}

