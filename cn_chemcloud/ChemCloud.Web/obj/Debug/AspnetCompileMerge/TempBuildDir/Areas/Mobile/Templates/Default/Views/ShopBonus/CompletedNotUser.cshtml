                }
            }
        });

        wx.onMenuShareAppMessage({
            title: '@Model.ShareTitle',
            desc: '@Model.ShareDetail',
            link: '@ViewBag.ShareHref',
            imgUrl: '@Model.ShareImg',
            type: 'link',
            dataUrl: '',
