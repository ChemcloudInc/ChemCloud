@model ChemCloud.Model.UserMemberInfo
@{
    ViewBag.Title = "个人中心";
    ViewBag.FootIndex = 3;
}


<div class="container">
    <div class="user-info clearfix">
        <img src="@Model.Photo" alt="" />
        <p>@(string.IsNullOrWhiteSpace(Model.RealName)?Model.Nick:Model.RealName)</p>
    </div>
    <div class="user-fav row">
        <span class="col-xs-6"><a href="CollectionProduct">@Model.FavoriteInfo.Count<br />收藏的产品</a></span>
        <span class="col-xs-6"><a href="CollectionShop">@ViewBag.CollectionShop<br />收藏的供应商</a></span>
    </div>
    <div class="my_menu">
        <ul class="clearfix">
            <li><a href="@Url.Action("Orders")">全部订单@(ViewBag.AllOrders == 0 ? "" : "(" + ViewBag.AllOrders + ")")</a></li>
            <li><a href="@Url.Action("Orders")?orderStatus=1">待付款@(ViewBag.WaitingForPay == 0 ? "" : "(" + ViewBag.WaitingForPay + ")")</a></li>
            <li><a href="@Url.Action("Orders")?orderStatus=3">待收货 @(ViewBag.WaitingForRecieve == 0 ? "" : "(" + ViewBag.WaitingForRecieve + ")")</a></li>
            <li><a href="@Url.Action("Orders")?orderStatus=5">待评价 @(ViewBag.WaitingForComments == 0 ? "" : "(" + ViewBag.WaitingForComments + ")")</a></li>
        </ul>
    </div>
    <div class="list-group">
        <a href="../Coupon/Management" class="list-group-item">
            我的优惠劵
            <span class="glyphicon glyphicon-menu-right"></span>
        </a>
    </div>
    <div class="list-group">
        <a href="../Order/ChooseShippingAddress" class="list-group-item">
            收货地址管理
            <span class="glyphicon glyphicon-menu-right"></span>
        </a>
    </div>
</div>