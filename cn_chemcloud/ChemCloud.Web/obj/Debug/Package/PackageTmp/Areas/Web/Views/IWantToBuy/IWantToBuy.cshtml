<div class="main">
    <div class="div_IWantToBy">
        <div class="div_IWantToBy_Left">
            <table id="table_Form" style="display:none;">
                <thead>
                    <tr><td colspan="2">发布我的采购信息</td></tr>
                </thead>
                <tbody>
                    <tr>
                        <td>产品名称：</td>
                        <td><input id="txt_ProductName" type="text" class="input_name_300" placeholder="请输入产品名称" /></td>
                    </tr>
                    <tr>
                        <td>采购量：</td>
                        <td><input id="txt_Quantity" type="text" class="input_name_300" placeholder="请输入采购数量（该数量以单价中“单位”为单位）" /></td>
                    </tr>
                    <tr>
                        <td>单价：</td>
                        <td><input id="txt_UnitPrice" type="text" class="input_name_200" placeholder="价格" />&nbsp;/&nbsp;<input id="txt_Unit" type="text" class="input_name_140" placeholder="单位" /></td>
                    </tr>
                    <tr>
                        <td>总价：</td>
                        <td><input id="txt_TotalPrice" type="text" class="input_name_300" placeholder="请输入总价" /></td>
                    </tr>
                    <tr>
                        <td>货币类型：</td>
                        <td>
                            <select id="select_TypeOfCurrency" class="select_300">
                                <option value="1">人民币</option>
                                <option value="2">美元</option>
                            </select>
                        </td>
                    </tr>
                    <tr>
                        <td>交付日期：</td>
                        <td><input id="txt_DeliveryDate" onclick="dateTime_YMD_CN(this)" class="start_datetime input_name_300 inputDateTime" type="text" placeholder="请输入交付日期" /></td>
                    </tr>
                    <tr>
                        <td>收货地址：</td>
                        <td><input id="txt_Address" type="text" class="input_name_300" placeholder="请输入收货地址" /></td>
                    </tr>
                    <tr>
                        <td>要求备注：</td>
                        <td><textarea id="txtArea_Remarks" rows="5" cols="30" placeholder="请输入要求备注" class="input_name_300"></textarea></td>
                    </tr>
                    <tr>
                        <td></td>
                        <td><span id="span_IWantToBuy" onclick="IWantToBuy_Add_Web()">提交</span></td>
                    </tr>
                </tbody>
            </table>
            <table id="table_Supplier" style="display:none;">
                <thead id="table_Supplier_thead_list">
                    <tr style="background-color:#F7F7F7;">
                        <td class="li_productname">产品名称</td>
                        @*<td class="li_unit">发布单价</td>*@
                        <td class="li_totalprice">发布总价</td>
                        <td class="li_createDate">发布日期</td>
                        <td class="li_latestDate">截止日期</td>
                        <td class="li_status">采购状态</td>
                    </tr>
                </thead>
                <tbody id="table_Supplier_tbody_list"></tbody>
            </table>

            <table id="table_LoginOut" style="display:none;">
                <thead id="table_LoginOut_thead_list">
                    <tr style="background-color:#F7F7F7;">
                        <td class="li_productname">产品名称</td>
                        @*<td class="li_unit">发布单价</td>*@
                        <td class="li_totalprice">发布总价</td>
                        <td class="li_createDate">发布日期</td>
                        <td class="li_latestDate">截止日期</td>
                        <td class="li_status">采购状态</td>
                        @*<td class="li_status" style="text-align:left;"><span class="span_wytb_lan1" style="padding:3px 10px;" onclick="getParamVel_Default()">我要采购</span></td>*@

                        <td class="li_status">操作</td>
                    </tr>
                </thead>
                <tbody id="table_LoginOut_tbody_list"></tbody>
            </table>

