<script src="~/Scripts/CommonJS.js"></script>
<script>
    $(function () {
        $('#refuse').click(function () {
            location.href = "/";
        });
        $("#Argeement").click(function () {
            location.href = "./Index";
        });
        $("#Argeement1").click(function () {
            location.href = "./Index_";
        });

        $.post("/register/RegisterAgreememtInfo", "", function (result) {
            if (result.success) {
                $("#divhtml").append(result.AgreementContent);
                $("#divhtml1").append(result.AgreementContent1);
            }
        })
    });

    var changeArgeement1 = function (b) {
       
        if (!$(b).is(':checked')) {
            $("#Argeement").attr("disabled", "disabled");
        } else {
            $("#Argeement").removeAttr("disabled");
        }
    }


    var changeArgeement2 = function (b) {

        if (!$(b).is(':checked')) {
            $("#Argeement1").attr("disabled", "disabled");
        } else {
            $("#Argeement1").removeAttr("disabled");
        }
    }

</script>