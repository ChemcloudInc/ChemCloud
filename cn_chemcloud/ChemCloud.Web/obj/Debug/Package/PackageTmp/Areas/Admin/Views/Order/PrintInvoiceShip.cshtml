                            <td>@ViewBag.strDate</td>
                        </tr>
                        <tr align="center" style="background-color:#dfdff0">
                            <td colspan="2">Ship To</td>
                            <td colspan="2">Bill To</td>
                        </tr>
                        <tr>
                            <td colspan="2">@Model.ShipTo</td>
                            <td colspan="2">@Model.InvoiceContext</td>
                        </tr>

