    Layout = "~/Areas/Web/Views/Shared/_UserCenter.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8" />
    <title>卖家处理退款申请</title>
    <link href="~/Content/style.css" rel="stylesheet" />
    <style>
        #Refund {
            width: 1210px;
            position: relative;
            padding: 24px 0 30px 280px;
            margin: 0 auto;
            overflow: hidden;
        }

