<style>
    td:last-child span {
        cursor: pointer;
    }
    .start_datetime{
        line-height: 26px;
        height: 26px;
        width: 75px;
        border: 1px solid #e4e4e4;
        display: inline-block;
        margin: 7px 5px 7px 5px;
        padding: 0 3px;
        font-family: 'microsoft yahei';
        color: #666;
        border-radius: 2px;
        }
    .search-area label{  width:70px; }
</style>
<div class="box1 lh24">
    <div class="title">
        <span class="title_txt cur">我要采购列表</span>
    </div>
    <div class="search-area">
        <label>产品名称：</label>
        <input class="search_order" id="txtkeyword" type="text" placeholder="请输入产品名称" />
        <label>发布日期：</label>
        <input id="inputStartDate1" class="start_datetime" type="text">到<input id="inputEndDate1" class="start_datetime" type="text">
        <label>交付日期：</label>
        <input id="inputStartDate2" class=" start_datetime" type="text">到<input id="inputEndDate2" class="start_datetime" type="text">
        <button id="btn_Search" class="btn_SearchAddDel" style="height:30px;">搜索</button>
        <button id="btn_Add" class="btn_SearchAddDel" style="height:30px;">新增</button>
    </div>
    <div class="div_list">
        <table class="tb-list">
            <colgroup>
                <col width="5%" />
                <col width="15%" />
                <col width="7%" />
                <col width="7%" />
                <col width="7%" />
                <col width="5%" />
                <col width="13%" />
                <col width="13%" />
                <col width="10%" />
                <col width="18%" />
            </colgroup>
            <thead>
                <tr class="tr" style="background-color:#e6e6e6;">
                    <th style="background-color:#e6e6e6;">序号</th>
                    <th style="background-color:#e6e6e6;">产品名称</th>
                    <th style="background-color:#e6e6e6;">单价</th>
                    <th style="background-color:#e6e6e6;">总价</th>
                    <th style="background-color:#e6e6e6;">单位</th>
                    <th style="background-color:#e6e6e6;">数量</th>
                    <th style="background-color:#e6e6e6;">交付日期</th>
                    <th style="background-color:#e6e6e6;">发布日期</th>
                    <th style="background-color:#e6e6e6;">采购状态</th>
                    <th style="background-color:#e6e6e6;">操作</th>
                </tr>
            </thead>
            <tbody id="tbody-list"></tbody>
        </table>
        <!-------------------------------------------分页----------------------------------------------------------------->
        <div id="pageGro1">
            <div id="pageGro">
                <div id="preSpanBtn">上一页</div>
                <div class="pageList">
                    <ul>
                        <li>1</li>
                        <li>2</li>
                        <li>3</li>
                        <li>4</li>
                        <li>5</li>
                    </ul>
                </div>
                <div id="nextSpanBtn">下一页</div>
            </div>
        </div>
        <!-------------------------------------------END 分页----------------------------------------------------------------->


    </div>
</div>


