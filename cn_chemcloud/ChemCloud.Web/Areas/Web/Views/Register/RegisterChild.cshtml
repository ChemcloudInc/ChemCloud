@{
    Layout = "~/Areas/Web/Views/Shared/_UserCenter.cshtml";
    ViewBag.Title = "注册子账户页面";
}
@using ChemCloud.Core;

<div class="box1 lh24">
    <div class="title bot-border">
        <h3 class="title_txt cur">添加子账户</h3>
    </div>
    <div class="border-box">
        <div class="user-set userset-lcol">
            <form id="personRegForm" method="POST" onsubmit="return false;">
                <input type="hidden" name="regType" id="regType" value="person">
                <input type="hidden" name="uuid" id="uuid" value="9e4da8d0-1b3e-45c7-b3bd-928fd09f3f97">

                <div class="form">
                    <div class="item" id="select-regName">
                        <span class="label"><b class="ftx04">*</b>用户名：</span>
                        <div class="fl item-ifo">
                            <div class="o-intelligent-regName">
                                <input type="text" id="regName" name="regName" class="text" tabindex="1" autocomplete="off"
                                       onpaste="return false;" value="用户名" onfocus="    if (this.value == '用户名') this.value = ''; this.style.color = '#333'"
                                       onblur="if (this.value == '') { this.value = '用户名'; this.style.color = '#999999' }" style="color: rgb(153, 153, 153);">
                                <i class="i-name"></i>
                                <label id="regName_succeed" class="blank"></label>
                                <label id="regName_info" style="display:none;" class="focus">请输入用户名</label>
                                <label id="regName_error" style="display:none;" class="error">请输入用户名</label>
                            </div>
                        </div>
                    </div>
                    <div class="item" id="select-regName">
                        <span class="label"><b class="ftx04">*</b>邮箱：</span>

                        <div class="fl item-ifo" style="height:30px;">
                            <div class="o-intelligent-regName">
                                <input type="text" id="regEmail" name="regEmail" class="text" tabindex="1" autocomplete="off"
                                       onpaste="return false;" value="邮箱" onfocus="if(this.value=='邮箱') this.value='';this.style.color='#333'"
                                       onblur="if (this.value == '') { this.value = '邮箱'; this.style.color = '#999999' }" style="color: rgb(153, 153, 153);">
                                <i class="i-name"></i>
                                <label id="regEmail_succeed" class="blank"></label>
                                <label id="regEmail_info" style="display:none;" class="focus">请输入您常用的电子邮箱</label>
                                <label id="regEmail_error" style="display:none;" class="error">请输入邮箱帐号</label>
                            </div>
                        </div>
                    </div>
                    <div id="o-password">
                        <div class="item">
                            <span class="label"><b class="ftx04">*</b>请设置密码：</span>
                            <div class="fl item-ifo" style="height:30px;">
                                <input type="password" id="pwd" name="pwd" class="text" tabindex="2" style="ime-mode:disabled;" onpaste="return  false" autocomplete="off">
                                <i class="i-pass"></i>
                                <label id="pwd_succeed" class="blank"></label>
                                <label id="pwd_info" class="focus" style="display:none;"><span>6-20位字符，可使用字母、数字或符号的组合,，不建议使用纯字母、纯数字、纯符号</span></label>
                                <label id="pwd_error" class="focus" style="display:none;"><span>密码长度只能在6-20位字符之间，不包含空格</span></label>
                            </div>
                        </div>

                        <div class="item hide" id="authcodeDiv">
                            <span class="label"><b class="ftx04">*</b>验证码：</span>
                            <div class="fl item-ifo" style="width:272px;">
                                <input type="text" id="checkCode" name="authcode" class="text text-1" tabindex="5" autocomplete="off" maxlength="5">

                                <label class="img">
                                    <img style="margin-top:10px;" id="checkCodeImg" src="/Register/GetCheckCode" onclick="reloadImg()">
                                </label>
                                <label id="checkCode_error" class="error" style="display:none"><span>请输入验证码</span></label>
                                <span class="clr"></span>
                            </div>
                        </div>
                    </div>
                    <div class="item item-new">
                        <span class="label">&nbsp;</span>
                        <div class="fl item-ifo">
                            <label><input type="checkbox" class="checkbox" onchange="checkAgreementIsValid()" checked="checked" id="readme">我已阅读并同意《<a href="/Register/RegisterAgreement" target="_blank" style="color:#3498DB" id="protocol">用户注册协议</a>》</label>
                            <label id="checkAgreement_error" class="error" style="display:none"><span>请仔细阅读并同意以上协议</span></label>
                            <span class="clr"></span>
                        </div>
                    </div>

                    <div class="item">
                        <span class="label">&nbsp;</span>
                        <input type="hidden" id="introducer" name="introducer" value="@ViewBag.Introducer" />
                        <div class="fl">

                            <input type="button" class="btn-5" id="registchildsubmit" style="cursor:pointer"
                                   value="保存修改">

                        </div>
                    </div>
                </div>
                <span class="clr"></span>
            </form>
        </div>
    </div>
</div>

<script src="~/Scripts/jquery.form.js"></script>
<script src="~/Scripts/Region.js"></script>
<script src="~/Scripts/RegionBind.js"></script>
<script type="text/javascript" src="~/Scripts/bootstrap-datetimepicker.js"></script>
<script type="text/javascript" src="~/Scripts/bootstrap-datetimepicker.zh-CN.js"></script>
<script src="~/Scripts/jquery.himemberpUpload.js"></script>
<script src="~/Scripts/jquery.himallLinkage.nocreate.js"></script>
<script src="~/Scripts/autoNumeric.js"></script>
<script src="~/Scripts/jquery.validate.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
<script src="~/Areas/Web/Scripts/register.js"></script>