@using ChemCloud.Core;
@{
    ViewBag.Title = "Add";
    //Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<script src="~/Scripts/jquery.nicescroll.min.js"></script>
<script src="~/Scripts/jquery.nicescroll.plus.js"></script>
<link href="~/Content/bootstrap-datetimepicker.min.css" rel="stylesheet" />
<script src="~/Scripts/bootstrap-datetimepicker.js"></script>
<script src="~/Scripts/jquery.artDialog.js"></script>
<script src="~/Scripts/artDialog.iframeTools.js"></script>
<script src="~/Scripts/ueditor/ueditor.config.js"></script>
<script src="~/Scripts/ueditor/ueditor.all.min.js"></script>
<script src="~/Areas/SellerAdmin/Scripts/techInfoAdd.js"></script>


<div class="container" style="padding-top:20px">
    <ul class="nav nav-tabs-custom clearfix">
        <strong>技术资料</strong>
        <li class="active"><a>新增技术资料</a></li>
        <li><a href="./Management">技术资料列表</a></li>
    </ul>
    <form class="form-horizontal" role="form">
        <div class="form-group" id="TitleDiv">
            <label class="col-sm-2 control-label" for=""><b style="color:red">*</b>标题：</label>
            <div class="col-sm-4">
                <input type="text" id="techTitle" name="techTitle" class="form-control input-sm" autocomplete="off"
                       onpaste="return false;" value="标题" onfocus="    if (this.value == '标题') this.value = ''; this.style.color = '#333'"
                       onblur="if (this.value == '') { this.value = '标题'; this.style.color = '#999999' }" style="color: rgb(153, 153, 153);width:600px;height:30px">
                <label id="regName_info" style="display:none;" class="focus">请输入标题</label>
                <label id="regName_error" style="display:none;color:red" class="error">标题不能为空</label>
            </div>
        </div>
        
        <div class="form-group" id="div2">
            <label class="col-sm-2 control-label" for=""><b style="color:red">*</b>作者:</label>
            <div class="col-sm-4">
                <input type="text" id="techAuthor" name="techAuthor" class="form-control input-sm" autocomplete="off"
                       onpaste="return false;" value="作者" onfocus="    if (this.value == '作者') this.value = ''; this.style.color = '#333'"
                       onblur="if (this.value == '') { this.value = '作者'; this.style.color = '#999999' }" style="color: rgb(153, 153, 153);width:600px;height:30px">
                <label id="regAuthor_info" style="display:none;" class="focus">请输入作者</label>
                <label id="regAuthor_error" style="display:none;color:red" class="error">作者不能为空</label>
            </div>
        </div>
        <div class="form-group" id="div3">
            <label class="col-sm-2 control-label" for="">联系电话:</label>
            <div class="col-sm-4">
                <input type="text" id="techTel" name="techTel" class="form-control input-sm" style="width:600px;height:30px">
            </div>
        </div>
        <div class="form-group" id="div3">
            <label class="col-sm-2 control-label" for=""><b style="color:red">*</b>邮箱:</label>
            <div class="col-sm-4">
                <input type="text" id="techEmail" name="techEmail" class="form-control input-sm"  autocomplete="off"
                       onpaste="return false;" value="邮箱" onfocus="if(this.value=='邮箱') this.value='';this.style.color='#333'"
                       onblur="if (this.value == '') { this.value = '邮箱'; this.style.color = '#999999' }" style="color: rgb(153, 153, 153);width:600px;height:30px">
                <label id="regEmail_info" style="display:none;" class="focus">请输入用于联系的电子邮箱</label>
                <label id="regEmail_error" style="display:none;color:red" class="error">请输入邮箱帐号</label>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label" for="">语言版本:</label>
            <div class="col-sm-4">
                <select id="LanguageType" style="width:600px;height:30px"></select>
            </div>
            <div class="col-sm-4">
                <p class="help-default"></p>
            </div>
        </div>
        <div class="form-group" id="div3">
            <label class="col-sm-2 control-label" for="">技术资料正文:</label>
            <div class="col-sm-4">
                <textarea id="techContent" name="techContent" style="width:600px;height:400px"></textarea>
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <input type="button" id="Save" class="btn btn-primary" value="保存">
            </div>
        </div>
    </form>

</div>
