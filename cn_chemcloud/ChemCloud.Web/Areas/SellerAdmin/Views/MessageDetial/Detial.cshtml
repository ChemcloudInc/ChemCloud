@model ChemCloud.Model.MessageRevice
@using ChemCloud.Core;
@{
    ViewBag.Title = "Detail";
}
<script src="~/Scripts/ueditor/ueditor.config.js"></script>
<script src="~/Scripts/ueditor/ueditor.all.min.js"></script>
<script>
    var eidtor;
    $(function () {
        eidtor = UE.getEditor('MessageContent', { initialFrameHeight: 400, initialFrameWidth: 600, setDisabled: ('fullscreen')});
        (function initRichTextEditor() {
            eidtor = UE.getEditor('MessageContent');
            eidtor.addListener('contentChange', function () {
                $('#contentError').hide();
            });
        })();

    });
</script>

<div class="container" style="padding-top:0px">
    <div class="title bot-border" style="margin-top:20px;">
        <ul class="nav nav-tabs-custom clearfix">
            <strong>消息明细</strong>
            <li class="active"><a>消息明细</a></li>
        </ul>
    </div>
    <form class="form-horizontal" role="form">
        @{
            if (@Model.MessageDetial.MsgType == 1)
            {
                <div class="form-group" id="TitleDiv">
                    <label class="col-sm-2 control-label" for="">消息类别：</label>
                    <div class="col-sm-4">
                        <input type="text" id="MessageType" name="MessageType" class="form-control input-sm" value="消息" style="width:600px;height:30px" disabled="disabled" />
                    </div>
                </div>
            }
            else if (@Model.MessageDetial.MsgType == 2)
            {
                <div class="form-group" id="TitleDiv">
                    <label class="col-sm-2 control-label" for="">消息类别：</label>
                    <div class="col-sm-4">
                        <input type="text" id="MessageType" name="MessageType" class="form-control input-sm" value="通知" style="width:600px;height:30px" disabled="disabled" />
                    </div>
                </div>
            }
        }
        
        <div class="form-group" id="div2">
            <label class="col-sm-2 control-label" for="">消息标题:</label>
            <div class="col-sm-4">
                <input type="text" id="MessageTitle" name="MessageTitle" class="form-control input-sm" value="@Model.MessageDetial.MessageTitle" style="width:600px;height:30px" disabled="disabled" />
            </div>
        </div>
        
        <div class="form-group" id="div3">
            <label class="col-sm-2 control-label" for="">发送时间:</label>
            <div class="col-sm-4">
                <input type="text" id="SendTime" name="SendTime" class="form-control input-sm" value="@Model.SendTime" style="width:600px;height:30px" disabled="disabled" />

            </div>
        </div>
        <div class="form-group" id="div3">
            <label class="col-sm-2 control-label" for="">消息发送人:</label>
            <div class="col-sm-4">
                <input type="text" id="SendName" name="SendName" class="form-control input-sm" value="@Model.MessageDetial.SendName" style="width:600px;height:30px" disabled="disabled" />
            </div>
        </div>
        @{
            if (@Model.ReadFlag == 2)
            {
                 <div class="form-group" id="div3">
                    <label class="col-sm-2 control-label" for="">阅读时间:</label>
                    <div class="col-sm-4">
                        <input type="text" id="ReadTime" name="ReadTime" class="form-control input-sm" value="@Model.ReadTime" style="width:600px;height:30px" disabled="disabled" />
                    </div>
                </div>
            }
        }
        
        
        <div class="form-group" id="div3">
            <label class="col-sm-2 control-label" for="">消息内容:</label>
            <div class="col-sm-4">
                <textarea id="MessageContent" name="MessageContent" style="width:700px;height:400px">@Model.MessageDetial.MessageContent</textarea>
            </div>
        </div>
        
    </form>
</div>
