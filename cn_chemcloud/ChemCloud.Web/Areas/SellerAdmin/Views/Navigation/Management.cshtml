@model IEnumerable<ChemCloud.Model.BannerInfo>
<script src="~/Scripts/jquery.ChemCloudDatagrid.js"></script>
<script src="~/Scripts/jquery.ChemCloudLinkage.nocreate.js"></script>
<script src="~/Areas/SellerAdmin/Scripts/navigationManagement.js"></script>
<div class="container">
    <ul class="nav nav-tabs-custom clearfix">
        <strong>导航</strong>
        <li class="active"><a>管理</a></li>
        <li><a class="add-nav-link">新增</a></li>
    </ul>
    <table class="table" id="list">
        <thead>
            <tr>
                <th>导航名称</th>
                <th>跳转地址</th>
                <th>排序</th>
                <th class="td-operate">操作</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr swapid="@item.Id">
                    <td>@item.Name</td>
                    <td>@item.Url</td>
                    <td><span class="glyphicon glyphicon-circle-arrow-up"></span> <span class="glyphicon glyphicon-circle-arrow-down"></span></td>
                    <td class="td-operate"><span class="btn-a"><a onclick="Edit(this)">编辑</a><a class="a-del" onclick="Delete('@item.Id')">删除</a></span></td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div class="dialog-form" id="dialog-form" style="display:none">
    <div class="form-group">
        <label class="label-inline" for="">导航名称</label>
        <input class="form-control input-sm" type="text" name="txtNavName" id="txtNavName">
    </div>
    <div class="form-group">
        <label class="label-inline" for="">跳转链接</label>
        <input class="form-control input-sm" type="text" name="txtNavUrl" id="txtNavUrl">
    </div>
</div>